{
  "name": "test_video_call",
  "version": "1.0.0",
  "description": "Video chat application with WebRTC and Socket.IO",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:start": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "cd client && npm install && npm run build",
    "start:fallback": "NODE_ENV=production node server.js",
    "start:prod": "npm install && cd client && npm install && npm run build && cd .. && node server.js"
  },
  "license": "ISC",
  "dependencies": {
    "express": "^4.21.2",
    "socket.io": "^4.5.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  }
}
